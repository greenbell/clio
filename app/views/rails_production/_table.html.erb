<table id="rails_production_table" class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>server_name</th>
      <th>app</th>
      <th><%= render "layouts/sortable_table_head", :form => "rails_production_form", :item => "time" %></th>
      <th>level</th>
      <th>message</th>
    </tr>
  </thead>
  <tbody>
    <%- @logs.each do |log| -%>
      <tr>
        <td><%= render "layouts/filterable_table_item", :form => "rails_production_form", :item => "server_name", :value => log.server_name %></td>
        <td><%= render "layouts/filterable_table_item", :form => "rails_production_form", :item => "app", :value => log.app %></td>
        <td><%= log.time %></td>
        <td><%= log.level %></td>
        <td>
          <% log.messages.each_with_index do |message, i| %>
            <%= tag("br") unless i == 0 %>
            <%== ansi_to_span message %>
          <% end %>
        </td>
      </tr>
    <%- end -%>
  </tbody>
</table>
